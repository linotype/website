<div id="{{field.id}}" class="linotype-field {{field.class}}" data-id="{{field.uid}}" data-key="{{field.key}}" data-type="Composer" data-controller="Composer">

    <div class="title">{{title}}</div>

    <div class="field">

        <div data-Composer-target="items" class="composer-items page" rel='drop-zone'>
            {% for key, item in linotype( 'helper', 'Composer.getFields', field.form.value ) %}
                <section class="composer-item" data-type="{{item.block}}">
                    <div class="composer-item-toolbar">
                        <div class="composer-item-drag"><img class="composer-item-drag-img" src="data:image/svg+xml;base64," /></div>
                        <div class="composer-item-title">{{item.block}}</div>
                        <div class="composer-item-delete">delete</div>
                    </div>
                    <div class="composer-item-edit">
                        {{ linotype_admin('block', item.block, item.context, 'composer-item-' ~ key ) }}
                    </div>
                </section>
            {% endfor %}
        </div>

        <div data-Composer-target="add" class="composer-items-add">
            {% for item in option.blocks %}
                <div class="composer-item-add" data-type="{{item}}">
                    add {{item}}
                </div>
            {% endfor %}
        </div>

        <div data-Composer-target="templates">
            {% for item in option.blocks %}
                <script id="composer-item-clone--{{item}}" type="text/template">
                    <div class="composer-item-toolbar">
                        <div class="composer-item-drag"><img class="composer-item-drag-img" src="data:image/svg+xml;base64," /></div>
                        <div class="composer-item-title">{{item}}</div>
                        <div class="composer-item-delete">delete</div>
                    </div>
                    <div class="composer-item-edit">
                        {{ linotype_admin('block', item, [], 'composer-item-' ) }}
                    </div>
                </script>
            {% endfor %}
        </div>

        <textarea data-Composer-target="value" id="composer-value--{{field.id}}" name="{{field.form.name}}" class="linotype-field-value" style="display:none">{{field.form.value}}</textarea>

    </div>

    <div class="desc"><i>{{info}}</i></div>

</div>